<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>bancoUsuario</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>bancoSenha</param-name>
        <param-value>senha123</param-value>
    </context-param>
    <servlet>
        <servlet-name>ProdutosServlet</servlet-name>
        <servlet-class>
            br.grupointegrado.ads.primeiroServlet.ProdutosServlet
        </servlet-class>
        <init-param>
            <param-name>adminEmail</param-name>
            <param-value>douglas.junior@grupointegrado.br</param-value>
        </init-param>
        <init-param>
            <param-name>adminFone</param-name>
            <param-value>0800 042 0109</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>DefinirAtributoServlet</servlet-name>
        <servlet-class>br.grupointegrado.ads.primeiroServlet.DefinirAtributoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LerAtributoServlet</servlet-name>
        <servlet-class>br.grupointegrado.ads.primeiroServlet.LerAtributoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.grupointegrado.ads.primeiroServlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProdutosServlet</servlet-name>
        <url-pattern>/produtos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DefinirAtributoServlet</servlet-name>
        <url-pattern>/definir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LerAtributoServlet</servlet-name>
        <url-pattern>/ler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
</web-app>
